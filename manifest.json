{
    "manifest_version": 2,
    "name": "Radiant Tabs",
    "description": "Simpler tabs organization for Chrome.",
    "version": "0.1",
    "author": "Pasha Craydon",
    "web_accessible_resources": [
        "images/*.png"
    ],
    "browser_action": {
        "default_title": "Radiant tabs plugin",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["lib/jquery-2.1.1.js", "eventPage.js"],
        "persistent": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Z",
                "mac": "Command+Z",
                "chromeos": "Ctrl+Z",
                "linux": "Ctrl+Z"
            }
        }
    },
    "icons": {
        "19": "icon.png"
    },
    "permissions": [
        "activeTab",
        "background",
        "notifications",
        "tabs"
    ]
}
