{
    "manifest_version": 2,
    "name": "Spark Tabs",
    "description": "Automatic tabs management in Chrome.",
    "version": "0.0.46",
    "author": "@pashasc",
    "options_page": "options.html",
    "web_accessible_resources": [
        "assets/*.png"
    ],
    "icons": {
        "16": "assets/spark16.png",
        "48": "assets/spark48.png",
        "128": "assets/spark128.png"
    },
    "browser_action": {
        "default_title": "Spark tabs plugin",
        "default_icon": "assets/spark.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "common.js",
            "eventPage.js"
        ],
        "persistent": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Z",
                "mac": "Command+Shift+Z",
                "chromeos": "Ctrl+Shift+Z",
                "linux": "Ctrl+Shift+Z"
            }
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "background",
        "tabs"
    ]
}
